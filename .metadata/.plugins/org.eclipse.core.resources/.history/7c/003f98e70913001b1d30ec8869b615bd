package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		/*
		 * Um jogo de adivinhação.
		 * O jogador 1 digita um número inteiro;
		 * o jogador 2 tem que adivinhar o número que foi digitado pelo jogador 1
		 * Enquanto ele não acertar o jogo continua perguntando o número.
		 */

		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("Digite um número"));
		int jogador2 = 0;
		int tentativas = 0;

		do {
			jogador2 = Integer.parseInt(JOptionPane.showInputDialog("Digite um número"));
			tentativas = tentativas + 1;
		}	while (jogador2 != jogador1);
										
			
		}
}

