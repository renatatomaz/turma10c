package variaveis;

public class ManipulaString {

	public static void main(String[] args) {

		String email = "reGina@gAma.aCaDemy";
		System.out.println("Original: " + email);
		System.out.println("Minuscula: " + email.toLowerCase());
		System.out.println("Maiusculas: " + email.toUpperCase());
		System.out.println("Quantidade de cartacteres: " + email.length());
		System.out.println("Posição do @: " + email.indexOf("@"));
		System.out.println("Exibir do 2º até o 4º: " + email.substring(1, 4));
		System.out.println("Do 3ª em diante: " + email.substring(2));
		System.out.println("Primeira metade: " + email.substring(0, email.length()/2));
		System.out.println("Informações antes do @: " + email.substring(0, email.indexOf("@")));
		System.out.println("Informações depois do @: " + email.substring(email.indexOf("@")+1));
		
	}

}
