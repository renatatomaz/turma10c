package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		/*
		 * Solicitar dia, mês e ano, variaveis separadas
		 * valide se o ano esta entre 1950 e 2002
		 * valide se o mês esta entre 1 e 12 
		 * valide se o dia esta entre 1 e 30(para alguns meses)
		 * valide se 1 e 31 (para outros meses)
		 * No final exibe a data completa
		 */

		byte dia = Byte.parseByte(JOptionPane.showInputDialog("Digite o dia"));
		byte mes = Byte.parseByte(JOptionPane.showInputDialog("Digite o mês"));
		short ano = Short.parseShort(JOptionPane.showInputDialog(" Digite o ano"));

		while (ano < 1950 || ano > 2002) {
			ano = Short.parseShort(JOptionPane.showInputDialog(" Digite nvoamente o ano"));
		}

		while (mes < 1 || mes > 12) {
			mes = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o mês"));
		}

		if (mes == 2 || mes == 4 || mes == 6 || mes == 9 || mes == 11) { // mês com até 30 dias
			while (dia <1 || dia > 30 ) {
				dia = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o dia"));
			} else  {// meses com mais de 30 dias
				while (dia <1 || dia > 31) {
					dia = Byte.parseByte(JOptionPane.showInputDialog("Digite novamente o dia"));
				}
			}
		}
		
			
			System.out.println(dia + "/" + mes + "/" + ano);
		}

	}
