package repeticao;

import javax.swing.JOptionPane;

public class ExercicioRepeticao2 {

	public static void main(String[] args) {
		
		String nome = JOptionPane.showInputDialog("Informe seu nome");
		int idade1 = Integer.parseInt(JOptionPane.showInputDialog("Informe sua idade"));
		
		System.out.println("Nome: " + nome + " - idade: " + idade1 + " anos.");
		
		String pessoa = "";
		int idade = 0;
		int somaIdade = 0;
		int quantidade = 0;
		
		do {
			pessoa = JOptionPane.showInputDialog("informe seu nome");
			idade = Integer.parseInt(JOptionPane.showInputDialog("Informe sua idade"));
			
		} while (pessoa.length() > 2);
		
		System.out.println("Nome: " + nome + " - idade: " + idade + " anos.");
	}

}
